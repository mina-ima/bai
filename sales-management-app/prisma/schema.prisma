// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  product_id                 String     @id @default(uuid())
  product_name               String
  product_shippingName       String?
  product_shippingPostalcode String?
  product_shippingAddress    String?
  product_shippingPhone      String?
  product_tax                Int
  product_unit               String
  product_unitPrice          Int
  product_note               String?
  deliveries                 Delivery[]
}



model CompanyInfo {
  id                    String  @id @default(uuid())
  company_name          String
  company_postalCode    String?
  company_address       String?
  company_phone         String?
  company_fax           String?
  company_mail          String?
  company_contactPerson String?
  company_bankName      String?
  company_bankBranch    String?
  company_bankType      String?
  company_bankNumber    String?
  company_bankHolder    String?
  company_invoiceNumber String?
}

model Delivery {
  delivery_id            String   @id @default(uuid())
  delivery_name          String
  delivery_quantity      Int
  delivery_unitPrice     Int
  delivery_unit          String
  delivery_note          String?
  delivery_tax           Int
  delivery_orderId       String?
  delivery_salesGroup    String?
  customer_name          String // customer_nameはCustomerモデルとのリレーションで取得するが、ここでは簡易的にStringで保持
  delivery_number        String   @unique @default(uuid()) // 自動付番
  delivery_invoiceNumber String? // 自動付番
  delivery_status        String // "済" | "未"
  delivery_invoiceStatus String? // "済" | "未"
  delivery_date          DateTime

  productId String
  product   Product @relation(fields: [productId], references: [product_id])

  
}
